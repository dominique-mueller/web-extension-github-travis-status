{
    "manifest_version": 2,
    "name": "GitHub & Travis CI - Enhanced Status",
    "icons": {
        "48": "assets/icon.png",
        "16": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "permissions": [
        "https://github.com/*",
        "tabs",
        "webNavigation"
    ],
    "background": {
        "scripts": [
            "src/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*"
            ],
            "js": [
                "src/content_script.js",
                "src/vendor.js"
            ],
            "css": [
                "src/content_script.css"
            ]
        }
    ]
}
