{
    "name": "GitHub & Travis CI - Extended Status",
    "version": "1.0.0",
    "description": "TODO",
    "manifest_version": 2,
    "permissions": [
        "https://github.com/*"
    ],
    "background": {
        "scripts": [
            "src/vendor.js",
            "src/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*/pull/*"
            ],
            "js": [
                "src/vendor.js",
                "src/content_script.js"
            ]
        }
    ]
}
